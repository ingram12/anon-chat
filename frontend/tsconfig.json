{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "esnext",
      "target": "esnext",
      "types": ["svelte", "node", "jest"],
      "verbatimModuleSyntax": false
    },
    "include": ["src/**/*.ts", "src/**/*.svelte"],
    "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
